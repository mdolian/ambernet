%html
  %head
    = js_include_tag 'jquery-1.3.2.min'
    = js_include_tag 'jquery.tablesorter'
    = js_include_tag 'jquery.autocomplete'
    = js_include_tag 'jquery.confirm'
    = js_include_tag 'jquery.form'
    = js_include_tag 'jquery.livequery'
    = js_include_tag 'jquery.fancybox'
    = js_include_tag 'jquery.ui'
    = js_include_tag :master, :bundle => :base
    = css_include_tag 'jquery.tablesorter'
    = css_include_tag 'jquery.autocomplete'
    = css_include_tag 'jquery.fancybox'
    = css_include_tag 'jquery.ui.custom'
    = css_include_tag :master, :bundle => :base
    = include_required_js 
    = include_required_css 
    %title
      AmberNET Online
  %body{:topmargin => "0", :leftmargin => "0", :marginwidth => "0", :marginheight => "0", :hspace => "0", :vspace => "0"}
    %div{:align => "center"}
      %img{:src => "/images/header.jpg"}
      %p
        %div{:class => "ui-widget"}
          - if !message[:notice].nil?
            %div{:class => "ui-state-highlight ui-corner-all", :style => "margin-top: 20px; padding: 0 .7em;"}
              %p
                %span{:class => "ui-icon ui-icon-info", :style => "float: left; margin-right: .3em;"}
                = message[:notice]
          - if !message[:error].nil?
            %div{:class => "ui-state-error ui-corner-all", :style => "margin-top: 20px; padding: 0 .7em;"}
              %p
                %span{:class => "ui-icon ui-icon-alert", :style => "float: left; margin-right: .3em;"}
                = message[:error]      
        %div{:id => "index_tabs"}
          %ul
            %li
              %a{:href => "/amberland/info"} Home
            %li 
              %a{:href => "/recordings"} Search Recordings     
            %li 
              %a{:href => "/shows"} Search Shows
            %li 
              %a{:href => "/beta"} Beta Information             