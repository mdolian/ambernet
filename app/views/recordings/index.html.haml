%h2 Search Recordings
%form{:action => "/recordings/search_results", :method => "post", :autocomplete => "off"}
  %div{:class => "jcarousel-control"}
    %a{:href => "#", :id => "1"}General
    |
    %a{:href => "#", :id => "2"}Location
    | 
    %a{:href => "#", :id => "3"}Source 
    | 
    %a{:href => "#", :id => "4"}Date
    %ul{:id => "mycarousel", :class => "jcarousel-skin-tango"}
      %li
        %div &nbsp
        %div
          %label Label
          = text_field :name => "label", :size => "20"
      %li
        %div &nbsp
        %div
          %label Venue
          = text_field :name => "venue_name", :id => "venue_name", :size => "20"
        %div &nbsp
        %div 
          %label City 
          = text_field :name => "venue_city", :id => "venue_city", :size => "20"
        %p
        %div &nbsp
        %div
          %label State
          = text_field :name => "venue_state", :size => "20"
      %li
        %div &nbsp
        %div
          %label Source
          = text_field :name => "source", :size => "20"
        %div &nbsp 
        %div
          %label Lineage
          = text_field :name => "lineage", :size => "20"
        %div &nbsp        
        %div
          %label Taper
          = text_field :name => "taper", :size => "20"
        %div &nbsp
        %div
          %label Type
          = select :name => "type", :collection => get_types
      %li
        %div &nbsp
        %div
          %label Year
          = select:name => "year", :collection => get_years 
        %div &nbsp       
        %div
          %label Range
          %input{:type => "text", :name => "start_date", :id => "start_date", :size => "7"} 
          to
          %input{:type => "text", :name => "start_date", :id => "end_date", :size => "7"}
  %div &nbsp;
  %input{:type => "submit", :value => "Search"} 
  %input{:type => "reset", :value => "Clear"}