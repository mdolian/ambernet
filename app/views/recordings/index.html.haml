%div{:id => "main_recordings"}
  = javascript_include_tag "search_recordings"
  = javascript_include_tag "accordion"
  - form_for :recording, :url => { :action => "search_results" } do |f|
    %div{:id => "search_accordion_recordings"}
      %h3
        %a{:href => "#"} General
      %div
        %table{:border => "0"}
          %tr
            %td
              %label Label
            %td
              %input{:type => "text", :name => "label", :size => "25"} 
          %tr
            %td
              %label Song
            %td
              %input{:type => "text", :name => "song_name", :size => "25"} 
      %h3
        %a{:href => "#"} Location
      %div         
        %table{:border => "0"}
          %tr
            %td
              %label Venue
              %input{:type => "text", :name => "venue_name", :size => "25"}               
          %tr
            %td
              %label City 
              %input{:type => "text", :name => "venue_city", :size => "25"}
          %tr
            %td
              %label State
              %input{:type => "text", :name => "venue_state", :size => "5"}  
      %h3
        %a{:href => "#"} Source
      %div
        %table{:border => "0"}
          %tr
            %td
              %label Source
            %td
              %input{:type => "text", :name => "source", :size => "25"}
          %tr
            %td
              %label Lineage
            %td
              %input{:type => "text", :name => "lineage", :size => "25"}
          %tr
            %td
              %label Taper
            %td
              %input{:type => "text", :name => "taper", :size => "25"}
          %tr
            %td
              %label Etree ID
            %td
              %input{:type => "text", :name => "shnid", :size => "5"}
          %tr
            %td
              %label Type
            %td
      %h3
        %a{:href => "#"} Date
      %div     
        %table{:border => "0"}
          %tr
            %td
              %label Year
          %tr
            %td
              %label Range
              %input{:type => "text", :name => "start_date", :id => "start_date", :size => "7"} 
              to
              %input{:type => "text", :name => "end_date", :id => "end_date", :size => "7"}         
    %div{:id => "search_buttons_recordings"} 
      %table{:width => "50%", :colspacing => "4"}    
        %tr
          %td{:colspan => "2"}  
            &nbsp      
        %tr
          %td{:align => "right"}
            %input{:type => "submit", :value => "Search", :name => "submit"} 
          %td{:align => "left"}
            %input{:type => "reset", :value => "Clear"}