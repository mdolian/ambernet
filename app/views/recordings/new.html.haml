= javascript_include_tag "admin"
%h2 Add Recording (admin only)
%form{:action => "/recordings/create", :method => "post", :autocomplete => "off"}
  %table
    %tr
      %td{:width => "25%"}
        %h5 Show:
        %input{:type => "hidden", :name => "show_id", :id => "show_id", :value => ""}
      %td{:width => "75%"}
        %input{:type => "text", :name => "date_played", :id => "show_date_played"}
    %tr
      %td       
        %h5 Label:
      %td
        %input{:type => "text", :name => "label", :size => "50"}
    %tr
      %td
        %h5 Type:
      %td
        %select{:name => "type"}
          = options_for_select(get_types)
    %tr
      %td
        %h5 File Type:
      %td
        %select{:name => "filetypes"}
          = options_for_select(get_filetypes)
    %tr
      %td
        %h5 Source:
      %td
        %input{:type => "text", :name => "source", :size => "50"}
    %tr
      %td
        %h5 Lineage:
      %td
        %input{:type => "text", :name => "lineage", :size => "50"}
    %tr
      %td
        %h5 Taper:
      %td
        %input{:type => "text", :name => "taper", :size => "50"}
    %tr
      %td
        %h5 Transferred by:
      %td
        %input{:type => "text", :name => "transfered_by", :size => "50"}
    %tr
      %td
        %h5 Notes:
      %td
        %textarea{:name => "notes", :rows => "3", :cols => "50"}   
    %tr
      %td
        %h5 Disc Count
      %td
        %select{:name => "discs", :id => "discs"}
          = options_for_select(get_discs)
    %tr
      %td 
      %td
        %div{:id => "tracks"}
    %tr
      %td{:colspan => "2"}
        %input{:type => "submit", :value => "Add"}
%div{:id => "dialog"}