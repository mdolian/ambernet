= js_include_tag :admin
%h2 Admin Recordings
= paginate @current_page, @page_count, :outer_window => 5
%table{:align => "center", :class => "tablesorter"}
  %thead
    %tr
      %th{:width => "10%", :align => "left"} Delete 
      %th{:width => "10%", :align => "left"} Edit
      %th{:width => "15%", :align => "left"} Show Date
      %th{:width => "30%", :align => "left"} Label
      %th{:width => "20%", :align => "left"} Venue Name
    %tbody  
      %tr
        %td{:colspan => "8"}
          %a{:href => "/recordings/new"} Add Recording
      - @recordings.each do |recording|
        %tr
          %td
            %a{:href => "/recordings/delete/#{recording.id}", :id => "delete"} Delete
          %td
            %a{:href => "/recordings/edit/#{recording.id}"} Edit
          %td= recording.show.date_played
          %td= recording.label
          %td= recording.show.venue.venue_name
= paginate @current_page, @page_count, :outer_window => 5