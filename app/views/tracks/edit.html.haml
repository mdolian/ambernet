%table{:width => "40%", :align => "center", :id => "recordingTrackTable"}
  %tr
    %th Track
    %th Song(s)
  - @tracks.each do |track|
    %tr
      %td= track.track
      %td 
        - track.setlists.each do |setlist|
          = setlist.song.song_name

%form{:action => "/tracks/add", :method => "post"}
  #addTracks
  %h5 Track Number
  %input{:type => "text", :name => "track"}
  #addTracks
  %h5 Songs on Track
  %select{:name => "setlist", :size=>"10", :multiple => true}
    = options_for_select(@setlists)
  %input{:type => "hidden", :name => "id", :value => "#{@recording.id}"}
  #addTracks
  = submit "Add Tracks" 