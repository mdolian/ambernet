= javascript_include_tag "search"
%form{:method => "get", :action => "/search/advanced_search_results", :autocomplete => "off", :id => "columnarForm"}  
  %fieldset
    %legend
      Show Details
    %label{:class => "first", :for => "song_name"} 
      Song
      %input{:type => "text", :name => "song_name", :size => "25", :id => "song_name"}
    %label{:for => "venue_name"} 
      Venue
      %input{:type => "text", :name => "venue_name", :size => "25", :id => "venue_name"}               
    %label{:for => "venue_city"} 
      City 
      %input{:type => "text", :name => "venue_city", :size => "25", :id => "venue_city"}
    %label{:for => "venue_state"} 
      State
      %select{:name => "venue_state", :id => "venue_state"}
        = options_for_select get_states
    %label{:for => "start_date"} 
      Date Range
      %input{:type => "text", :name => "start_date", :id => "start_date", :size => "7"}
    %label{:for => "end_date"}   
      to
      %input{:type => "text", :name => "end_date", :id => "end_date", :size => "7"}          
  %fieldset
    %legend 
      Recording Details
    %label{:class => "first", :for => "label"} 
      Label
      %input{:type => "text", :name => "label", :size => "25", :id => "label"}            
    %label{:for => "source"} 
      Source
      %input{:type => "text", :name => "source", :size => "25", :id => "source"}
    %label{:for => "lineage"} 
      Lineage
      %input{:type => "text", :name => "lineage", :size => "25", :id => "lineage"}
    %label{:for => "taper"} 
      Taper
      %input{:type => "text", :name => "taper", :size => "25", :id => "taper"}
    %label{:for => "shnid"} 
      Etree ID
      %input{:type => "text", :name => "shnid", :size => "5", :id => "shnid"}
    %label{:for => "recording_type"} 
      Recording Type
      %select{:name => "recording_type", :id => "recording_type"}
        = options_for_select get_recording_types

  %input{:type => "submit", :value => "Search", :name => "submit"} 
  %input{:type => "reset", :value => "Clear"}